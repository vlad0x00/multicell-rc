#!/bin/bash

ITERATIONS=10

cd "$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
cd ..

accuracies=()
for i in $(seq $ITERATIONS); do
  echo "$i / $ITERATIONS"
  accuracies+=($(./run | grep "Testing accuracy" | awk '{ print $3 }'))
done

sum=$(IFS="+"; bc <<< "${accuracies[*]}")
len=${#accuracies[@]}

echo $(bc <<< "scale=2; $sum / $len")
